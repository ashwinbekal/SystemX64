<!-- activity_sign_in.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    android:padding="16dp">
    <TextView
        android:id="@+id/ry0frthx8r3g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="61dp"
        android:text="\nLogin"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/rvvp9t2zcn9j"
        android:layout_width="151dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"


        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="34dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="211dp"
        android:layout_marginBottom="99dp"
        android:text="Email Address"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSignIn"
        android:layout_marginHorizontal="34dp"
        android:layout_marginBottom="37dp"

        android:text="Password"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />


    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28sp"
        android:layout_marginTop="185sp"

        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="@color/white" />

    <EditText

        android:id="@+id/editTextPassword"
        android:layout_width="252dp"
        android:layout_height="wrap_content"

        android:layout_below="@id/editTextEmail"
        android:layout_marginLeft="28sp"
        android:layout_marginTop="56dp"

        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="129dp"

        android:layout_height="60dp"
        android:layout_below="@id/editTextPassword"
        android:layout_alignParentStart="true"

        android:layout_marginStart="93dp"
        android:layout_marginLeft="125sp"
        android:layout_marginTop="113dp"
        android:backgroundTint="#55D077"
        android:text="Login"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/textViewsignup"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/buttonSignIn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="69dp"

        android:clickable="true"

        android:minHeight="48dp"
        android:onClick="OnSignClick"
        android:text="New user? Signup"
        android:textColor="?attr/colorPrimary" />


</RelativeLayout>
